{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<h1>{{ title }}</h1>

<h2>Comments ({{ comments|length }})</h2>
<div>
    <ol>
      {% for comment in comments %}
      <li>
        {{ comment }}
      </li>
      {% endfor %}
    </ol>
</div>
{% endblock %}